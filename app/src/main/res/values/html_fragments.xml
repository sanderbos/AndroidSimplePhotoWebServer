    <string name="html_main_template">
        <![CDATA[
            <!doctype html>
            <html>
                <head>
                    <title>||title||</title>
                    <link rel="stylesheet" href="/default_style.css" type="text/css"></link>
                </head>
                <body>
                    <div class="main-container">
                        <h1>||title||</h1>
                        ||content||
                    </div>
                </body>
            </html>
        ]]>
    </string>
    <string name="default_css">
        <![CDATA[
            body {font-family:Arial, sans-serif; background: #D9D9D9;}
            table { margin: 1em; border-collapse: collapse; }
            td, th { padding: .3em; border: 0px #ccc solid; vertical-align: top }
            .main-container {margin: 30px 30px 30px 30px; width: 600px; background: #D3D3D3; padding: 20px;}
            a {color: black;}
            a:visited {color: black;}
        ]]>
    </string>
